<script>
function responder() {
    let input = document.getElementById("userInput").value;
    let mensajes = document.getElementById("messages");

    if (input.trim() === "") return;

    let limpio = input.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");

    mensajes.innerHTML += "<p><b>Tú:</b> " + input + "</p>";

    let respuesta = "Lo siento, no tengo información sobre esa consulta.";

    if (limpio.includes("mision")) {
        respuesta = "Nuestra misión es fortalecer la gestión administrativa y el acompañamiento pedagógico en el distrito 20-011.";
    }
    else if (limpio.includes("vision")) {
        respuesta = "Nuestra visión es consolidar centros educativos eficientes, transparentes y orientados a resultados.";
    }
    else if (limpio.includes("oficio")) {
        respuesta = "Modelo básico de oficio: Por medio de la presente me permito saludarle cordialmente y a la vez informarle...";
    }
    else if (limpio.includes("horario")) {
        respuesta = "El horario de atención es de lunes a viernes de 8:00 AM a 4:00 PM.";
    }

    mensajes.innerHTML += "<p><b>Asistente:</b> " + respuesta + "</p>";
    mensajes.scrollTop = mensajes.scrollHeight;

    document.getElementById("userInput").value = "";
}
</script>

